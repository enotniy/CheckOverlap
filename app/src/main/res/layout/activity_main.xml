<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/red_label"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="#FF0000"
        android:padding="8dp"
        android:text="RED_LABEL"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/green_label"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="#00FF00"
        android:padding="8dp"
        android:text="GREEN_LABEL"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/red_label"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/yellow_label"
        android:layout_width="50dp"
        android:background="#FFFF00"
        android:layout_height="100dp"
        android:padding="8dp"
        android:text="YELLOW_LABEL"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/green_label"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/blue_label"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="#0000FF"
        android:padding="8dp"
        android:text="BLUE_LABEL"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>